<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#828282"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBCBC5"
        android:text="
                    " />
    <!--/////////////////////////////////-->
    <!--/// 감정-->
    <!--///////////////////////////////////-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:text="감정: "
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radiobox1">// radio 버튼들 가로로 정렬
            <!--///1. 화남-->
            <RadioButton
                android:id="@+id/angry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:orientation="horizontal"
                android:text="화남"
                android:textColor="#FFFFFF" />
            <!--////2. 짜증-->
            <RadioButton
                android:id="@+id/annoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="짜증"
                android:textColor="#FFFFFF" />
            <!--/////3. 슬픔-->
            <RadioButton
                android:id="@+id/sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="슬픔"
                android:textColor="#FFFFFF" />
            <!--4. 외로움 lonely-->
            <RadioButton
                android:id="@+id/lonely"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="외로움"
                android:textColor="#FFFFFF" />
            <!--/////t5. 무기력 unhealthy-->
            <RadioButton
                android:id="@+id/unhealthy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="무기력"
                android:textColor="#FFFFFF" />
        </RadioGroup>

    </LinearLayout>
    <!--/////////////////////////////////-->
    <!--/// 사유-->
    <!--///////////////////////////////////-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:padding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="이유:"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            <!--// radio 버튼들 가로로 정렬-->
                <RadioGroup
                    android:id="@+id/radiobox2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/connection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:orientation="horizontal"
                        android:text="인간관계"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:text="가족"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:text="사랑"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:text="자존감"
                        android:textColor="#FFFFFF" />

                </RadioGroup>
        </LinearLayout>


    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/edit1"
        android:layout_width="330dp"
        android:layout_height="257dp"
        android:background="#FBCBC5" />
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="260dp"
        android:background="#FBCBC5"
        android:text="등록"
        android:id="@+id/enroll"/>

    <TextView
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF" />

        <!--탭버튼 생성-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout">

            <Button
                android:layout_weight="1"
                android:id="@+id/bt_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글작성"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/bt_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목록"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/bt_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차트"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/bt_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>